generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Group {
  id        String   @id @default(uuid())
  name      String
  movement  Movement
  createdAt DateTime @default(now())
  tents     Tent[]
}

model Tent {
  id                String   @id @default(uuid())
  identifier        String
  size              Int
  unit              Unit     @default(GROUPE)
  state             State
  complete          Boolean  @default(true)
  integrated        Boolean  @default(false)
  type              String   @default("Canadienne")
  comments          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  groupId           String
  group             Group    @relation(fields: [groupId], references: [id])

  @@unique([groupId, identifier], name: "TentIdentifier")
}

enum Movement {
  SGDF
  SGDFM
  SUF
  AGSE
  EEUDF
  EEDF
  EEIDF
}

enum Unit {
  FARFADETS
  LUTINS
  LUTINES
  BATISSEURS
  MOUSSAILLONS
  JEANNETTES
  LOUVETTES
  LOUVETEAUX
  MOUSSES
  ECLAIREUSES
  GUIDES
  ECLAIREURS
  SCOUTS
  MARINS
  PERSPECTIVES
  ROUTIERS
  GUIDESAINNES
  AINEES
  AINES
  EQUIPIERS
  EQUIPIERES
  PIONNIERS
  CARAVELLES
  COMPAGNONS
  RESPONSABLES
  GROUPE
}

enum State {
  INUTILISABLE
  MAUVAIS
  BON
  NEUF
}
