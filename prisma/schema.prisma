generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Group {
  id                 String       @id @default(uuid())
  name               String
  movement           Movement
  createdAt          DateTime     @default(now())
  adminEmailVerified Boolean      @default(false)
  customUnits        CustomUnit[]
  tents              Tent[]
  users              User[]
}

model User {
  id             String   @unique @default(uuid())
  firstName      String?
  lastName       String?
  email          String   @unique
  emailVerified  Boolean  @default(false)
  hashedPassword String
  isAdmin        Boolean  @default(false)
  groupId        String
  group          Group    @relation(fields: [groupId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Tent {
  id         String   @id @default(uuid())
  identifier String
  size       Int
  unit       Unit?
  customUnit String?
  state      State
  complete   Boolean  @default(true)
  integrated Boolean  @default(false)
  type       String   @default("Canadienne")
  comments   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  groupId    String
  group      Group    @relation(fields: [groupId], references: [id])

  @@unique([groupId, identifier], name: "TentIdentifier")
}

model CustomUnit {
  id      Int    @id @default(autoincrement())
  label   String
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
}

enum Movement {
  SGDF
  SGDFM
  SUF
  AGSE
  EEUDF
  EEDF
  EEIDF
}

enum Unit {
  FARFADETS
  LUTINS
  LUTINES
  BATISSEURS
  MOUSSAILLONS
  JEANNETTES
  LOUVETTES
  LOUVETEAUX
  MOUSSES
  ECLAIREUSES
  GUIDES
  ECLAIREURS
  SCOUTS
  MARINS
  PERSPECTIVES
  ROUTIERS
  GUIDESAINNES
  AINEES
  AINES
  EQUIPIERS
  EQUIPIERES
  PIONNIERS
  CARAVELLES
  COMPAGNONS
  RESPONSABLES
  GROUPE
}

enum State {
  INUTILISABLE
  MAUVAIS
  BON
  NEUF
}
